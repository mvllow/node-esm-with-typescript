{
	"name": "package",
	"version": "0.0.0",
	"description": "Node template for esm packages with typescript",
	"license": "MIT",
	"repository": "mvllow/package",
	"funding": "https://github.com/sponsors/mvllow",
	"author": {
		"name": "mvllow",
		"email": "mvllow@icloud.com"
	},
	"type": "module",
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"build": "del-cli dist && tsc && npm test",
		"test": "xo && ava",
		"release": "np",
		"version": "npm run build"
	},
	"files": [
		"dist"
	],
	"types": "dist",
	"keywords": [
		"package"
	],
	"devDependencies": {
		"@mvllow/tsconfig": "^0.1.0",
		"@types/node": "^16.11.11",
		"ava": "^3.15.0",
		"del-cli": "^4.0.1",
		"np": "^7.6.0",
		"prettier": "^2.5.1",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.2",
		"xo": "^0.47.0"
	},
	"prettier": {
		"bracketSpacing": false,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "es5",
		"useTabs": true
	},
	"xo": {
		"prettier": true
	},
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"nonSemVerExperiments": {
			"configurableModuleFormat": true
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	}
}
